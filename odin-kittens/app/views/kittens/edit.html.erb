<h1>Edit Kitten</h1>

<%= form_for @kitten do |f| %>
	<div class="form-group">
		<%= f.label :name %>
		<%= f.text_field :name, class: "form-control" %>
	</div>

	<div class="form-group">
		<%= f.label :age %>
		<%= f.text_field :age, class: "form-control" %>
	</div>

	<div class="form-group">
		<%= f.label :cuteness %>
		<%= f.text_field :cuteness, class: "form-control" %>
	</div>

	<div class="form-group">
		<%= f.label :softness %>
		<%= f.text_field :softness, class: "form-control" %>
	</div>

	<div class="submit">
		<%= f.submit "Update", class: "btn btn-primary btn-lg" %>
 	</div>
<% end %>